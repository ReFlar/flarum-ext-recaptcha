{
    "name": "flarum/flarum-ext-recaptcha",
    "description": "Google reCAPTCHA for flarum",
    "type": "flarum-extension",
    "keywords": ["captcha", "validate", "verify"],
    "license": "MIT",
    "authors": [
        {
          "name": "DaniÃ«l Klabbers",
          "email": "daniel@klabbers.email",
          "homepage": "http://luceos.com"
        },
        {
            "name": "Sajjad Hashemian",
            "email": "wolaws@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/flarum/core/issues",
        "source": "https://github.com/flarum/flarum-ext-recaptcha"
    },
    "require": {
        "flarum/core": "^0.1.0-beta.8",
        "google/recaptcha": "~1.1"
    },
    "autoload": {
        "psr-4": {
            "Flarum\\ReCaptcha\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Google reCAPTCHA",
            "icon": {
                "image": "icon.svg",
                "backgroundColor": "#fff",
                "backgroundSize": "contain",
                "backgroundPosition": "center",
                "backgroundRepeat": "no-repeat"
            }
        }
    }
}
